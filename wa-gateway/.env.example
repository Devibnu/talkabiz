# WhatsApp Gateway Environment
# Copy this to .env and configure

# Server Configuration
PORT=3001
NODE_ENV=development

# Security
API_KEY=your_super_secret_api_key_change_this
WEBHOOK_SECRET=your_webhook_secret_change_this

# Laravel Webhook URL (where to send connection events)
LARAVEL_WEBHOOK_URL=http://localhost:8000/api/whatsapp/webhook

# Session Storage Path (relative to wa-gateway folder)
SESSION_PATH=./sessions

# Logging
LOG_LEVEL=info

# Puppeteer Configuration (for whatsapp-web.js)
# Set to true if running on server without display
PUPPETEER_HEADLESS=true

# Optional: Custom Chrome path (for servers)
# CHROME_PATH=/usr/bin/chromium-browser
